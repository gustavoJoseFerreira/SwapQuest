<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwapQuest.MainPage"
             BackgroundColor="#f5f3f2"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="logo2.png"
                HeightRequest="450"
                WidthRequest="400"
                Margin="0, 50, 0, 0" />

            <Button
                x:Name="Login"
                Text="Login" 
                WidthRequest="100"
                HorizontalOptions="Center"
                
                Clicked="LoginClicked"/>

            <Button 
                x:Name="Register"
                Text="Registo"
                WidthRequest="100"
                HorizontalOptions="Center" 
                Margin="0,20,0,0"
                Clicked="RegisterClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
