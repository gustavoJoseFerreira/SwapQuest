<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwapQuest.ColecoesPage1"
             Title="As Minhas Coleções">
    <VerticalStackLayout>
        <Picker x:Name="AdicionarColecao"
    Title="Adicionar Nova Coleção"
    VerticalOptions="Center"
    HorizontalOptions="Center"
    Margin="0,20,0,0">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Pokemon</x:String>
                    <x:String>Lorcana</x:String>
                    <x:String>Magic </x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button x:Name="ButtonCriarColecao"
        Text="Criar Coleção"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Margin="0,20,0,0"
        Clicked="CriarColecao"/>

        <Label
        Text="As suas Coleções:"
        VerticalOptions="Center"
        HorizontalOptions="StartAndExpand"
        Margin="20,20,0,0"
       
        />
        <StackLayout x:Name="buttonContainer" />


    </VerticalStackLayout>
</ContentPage>